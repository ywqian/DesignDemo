<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_simple_factory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.android.demo.design.sfactory.ui.SimpleFactoryActivity"
    tools:showIn="@layout/activity_simple_factory">

    <EditText
        android:id="@+id/et_numberA"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="number"
        android:text="23"/>

    <Spinner
        android:id="@+id/operation_spinner"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:entries="@array/operation"/>

    <EditText
        android:id="@+id/et_numberB"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="number"
        android:text="23"/>

    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textSize="18sp"
        android:text=""/>

</LinearLayout>
